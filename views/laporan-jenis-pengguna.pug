extends layout.pug

block content
	br
	fieldset
		legend
			h2 Data Jenis Pengguna
		a.btn.btn-success(href='#tambah')
			span.glyphicon.glyphicon-plus-sign
			|  Tambah Jenis Pengguna
		table.table.table-striped.table-bordered
			tr
				th No
				th Nama Jenis
				th(colspan='2') Aksi
			- var no=1
			each lap in daftar_jenis_pengguna
				tr
					td #{no}
					td #{lap.nm_jenis}
					td
						a.btn.btn-success(href='/kelola/jenis-pengguna/edit?id_jenis='+lap.id_jenis)
							span.glyphicon.glyphicon-edit
							|  Edit
						button.btn.btn-danger(type='button', data-toggle='modal', data-target='#konfirmasi'+lap.id_jenis)
							span.glyphicon.glyphicon-remove
							|  Hapus
						.modal.fade(id='konfirmasi'+lap.id_jenis, role='dialog')
							.modal-dialog
								.modal-content
									.modal-header
										button.close(type='button', data-dismiss='modal') Ã—
										h4.modal-title Peringatan!
									.modal-body
										p
											| Apakah Anda yakin ingin menghapus jenis pengguna 
											b #{lap.nm_jenis}
											|  dari sistem?
									.modal-footer.float-right
										a.btn.btn-danger(href='jenis-pengguna/hapus?id_jenis='+lap.id_jenis)     Ya    
										button.btn.btn-default(type='button', data-dismiss='modal') Tidak
				- no++
		br
		fieldset#tambah
			legend
				h2 Tambah Data Baru
			form(method='post', accept-charset='utf-8')
					.form-group
						label.label-control(for='Tnm_jenis') Nama Jenis Pengguna
						input#Tnm_jenis.form-control(placeholder='Min. 3 karakter', type='text', name='Tnm_jenis', value='') 
						button.btn.btn-success(type='submit')
							span.glyphicon.glyphicon-plus-sign
							|  Simpan
	
